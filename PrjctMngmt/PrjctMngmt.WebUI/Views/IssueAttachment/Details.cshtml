@model PrjctMngmt.Models.IssueAttachment

<fieldset>
    <legend>Issue attachment</legend>

    <div class="display-label">Filename</div>
    <div class="display-field">
        @Html.DisplayFor(model => model.Filename)
    </div>

    <div class="display-label">Entry date</div>
    <div class="display-field">
        @Html.DisplayFor(model => model.EntryDate)
    </div>

    <div class="display-label">Description</div>
    <div class="display-field">
        @Html.DisplayFor(model => model.Description)
    </div>

    <div class="display-label">Developer</div>
    <div class="display-field">
        @Html.DisplayFor(model => model.Developer.FirstName)
        @Html.DisplayFor(model => model.Developer.LastName)
    </div>

    <div class="display-label">Issue</div>
    <div class="display-field">
        @Html.DisplayFor(model => model.Issue.Subject)
    </div>
</fieldset>
<p>
    @Html.ActionLink("Edit", "Edit", new { id=Model.IssueAttachmentID })
</p>
