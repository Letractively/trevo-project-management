@model IEnumerable<PrjctMngmt.Models.IssueCategory>

@{
    ViewBag.Title = "Issue categories";
    var odd = false;
}

<h2>Issue categories</h2>

<p>
    @Html.ActionLink("Add new issue category", "Create")
</p>

@if (Model.Count() > 0)
{
    <div class="datagrid">
        <table>
            <thead>
                <tr>
                    <th>
                        Name
                    </th>
                    <th>
                    </th>
                </tr>
            </thead>
            @foreach (var item in Model)
            {
                <tbody>
                    <tr class="@(odd ? "alt" : "")">
                        <td>
                            @Html.DisplayFor(modelItem => item.IssueCategoryName)
                        </td>
                        <td>
                            @Html.ActionLink("Edit", "Edit", new { id = item.IssueCategoryName }) |
                            @Html.ActionLink("Details", "Details", new { id = item.IssueCategoryName }) |
                            @Html.ActionLink("Delete", "Delete", new { id = item.IssueCategoryName })
                        </td>
                    </tr>
                    @{ odd = !odd; }
                </tbody>
            }
        </table>
        @{ odd = false; }
    </div>
}
else
{
    <p>
        Issue categories not found.
    </p>
}
<div>
    <br />
    @Html.ActionLink("Back to issues", "Index", "Issue")
</div>
