@model PrjctMngmt.Models.Message

@{
    ViewBag.Title = "Delete a message";
}

<h2>Delete a message</h2>

<h3>Are you sure you want to delete this message?</h3>
<fieldset>
    <legend>Message</legend>

    <div class="display-label">Message</div>
    <div class="display-field">
        @Html.DisplayFor(model => model.Data)
    </div>

    <div class="display-label">Entry date</div>
    <div class="display-field">
        @Html.DisplayFor(model => model.EntryDate)
    </div>

    <div class="display-label">Edit date</div>
    <div class="display-field">
        @Html.DisplayFor(model => model.EditDate)
    </div>

    <div class="display-label">Developer</div>
    <div class="display-field">
        @Html.DisplayFor(model => model.Developer.FirstName)
        @Html.DisplayFor(model => model.Developer.LastName)
    </div>

    <div class="display-label">Topic</div>
    <div class="display-field">
        @Html.DisplayFor(model => model.Topic.Name)
    </div>
</fieldset>
@using (Html.BeginForm()) {
    <p>
        <input type="submit" value="Delete" /> |
        @Html.ActionLink("Back to List", "Index")
    </p>
}
