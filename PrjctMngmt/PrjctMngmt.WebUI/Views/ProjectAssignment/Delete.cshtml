@model PrjctMngmt.Models.ProjectAssignment

@{
    ViewBag.Title = "Delete project assignment";
}

<h2>Delete project assignment</h2>

<h3>Are you sure you want to delete this?</h3>
<fieldset>
    <legend>Project assignment</legend>

    <div class="display-label">Role</div>
    <div class="display-field">
        @Html.DisplayFor(model => model.RoleName)
    </div>

    <div class="display-label">Description</div>
    <div class="display-field">
        @Html.DisplayFor(model => model.Description)
    </div>

    <div class="display-label">Project</div>
    <div class="display-field">
        @Html.DisplayFor(model => model.Project.Name)
    </div>

    <div class="display-label">Developer</div>
    <div class="display-field">
        @Html.DisplayFor(model => model.Developer.FirstName)
        @Html.DisplayFor(model => model.Developer.LastName)
    </div>
</fieldset>
@using (Html.BeginForm()) {
    <p>
        <input type="submit" value="Delete" /> |
        @Html.ActionLink("Back to projects", "Index", "Project")
    </p>
}
