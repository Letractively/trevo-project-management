@model IEnumerable<PrjctMngmt.Models.ProjectCategory>

@{
    ViewBag.Title = "Project categories";
}

<h2>Project categories</h2>

<p>
    @Html.ActionLink("Add new project category", "Create")
</p>
<table>
    <tr>
        <th>
            Name
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.ProjectCategoryID }) |
            @Html.ActionLink("Details", "Details", new { id=item.ProjectCategoryID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.ProjectCategoryID })
        </td>
    </tr>
}

</table>
