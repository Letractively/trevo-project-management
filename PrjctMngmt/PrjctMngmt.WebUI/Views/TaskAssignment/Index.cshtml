@model IEnumerable<PrjctMngmt.Models.TaskAssignment>

@{
    ViewBag.Title = "Task assignments";
}

<h2>Task assignments</h2>

<p>
    @Html.ActionLink("Add new task assignment", "Create")
</p>
<table>
    <tr>
        <th>
            Task
        </th>
        <th>
            Developer
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Task.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Developer.FirstName)
            @Html.DisplayFor(modelItem => item.Developer.LastName)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.TaskAssignmentID }) |
            @Html.ActionLink("Details", "Details", new { id=item.TaskAssignmentID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.TaskAssignmentID })
        </td>
    </tr>
}

</table>
